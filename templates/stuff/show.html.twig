{% extends 'base.html.twig' %}

{% block title %}Stuff{% endblock %}

{% block body %}
    <h1>Stuff</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stuff.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stuff.name }}</td>
            </tr>
            <tr>
                <th>LendAt</th>
                <td>{{ stuff.lendAt ? stuff.lendAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ReturnedAt</th>
                <td>{{ stuff.returnedAt ? stuff.returnedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('stuff_index') }}">back to list</a>

    <a href="{{ path('stuff_edit', {'id': stuff.id}) }}">edit</a>

    {{ include('stuff/_delete_form.html.twig') }}
{% endblock %}
